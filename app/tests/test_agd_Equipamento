import pytest
from django.urls import reverse
from app.models import ReservaEquipamento

@pytest.mark.django_db
def test_agdequipamento_post_sucesso(client, sala):
    url = reverse('sala')
    data = {
        'sala': sala.idEquipamento,
        'data': '2025-10-15',
        'hora_inicio': '14:00',
        'hora_fim': '15:00'
    }
    response = client.post(url, data, follow=True)
    assert response.status_code == 200
    assert ReservaEquipamento.objects.count() == 1
    reserva = ReservaEquipamento.objects.first()
    assert reserva.sala == sala
